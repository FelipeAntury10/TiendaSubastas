@page
@using lib_dominio.Entidades
@using lib_dominio.Nucleo
@model asp_presentacion.Pages.Ventanas.SubastasModel
@{
    ViewData["Title"] = "Subastas";
}

<h2>Subastas</h2>

<form method="post" enctype="multipart/form-data">
    <div>
        <label>Producto filtro:</label>
        <input asp-for="Filtro.ProductosID" />
        <button asp-page-handler="BtRefrescar" type="submit">Buscar</button>
        <button asp-page-handler="BtNuevo" type="submit">Nuevo</button>
    </div>

    @if (Model.Accion == Enumerables.Ventanas.Listas)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Categoría</th>
                    <th>Producto</th>
                    <th>Vendedor</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Lista ?? new List<Subastas>())
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.FechaInicio.ToShortDateString()</td>
                        <td>@item.FechaFin.ToShortDateString()</td>
                        <td>@item._Categoria?.Nombre</td>
                        <td>@item._Producto?.Nombre</td>
                        <td>@item._Vendedor?.Nombre</td>
                        <td>@item._Estado?.Nombre</td>
                        <td>
                            <button asp-page-handler="BtModificar" asp-route-data="@item.ID" type="submit">Modificar</button>
                            <button asp-page-handler="BtBorrarVal" asp-route-data="@item.ID" type="submit">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.Accion == Enumerables.Ventanas.Editar)
    {
        <div>
            <label>Fecha Inicio:</label>
            <input asp-for="Actual.FechaInicio" type="date" />
        </div>
        <div>
            <label>Fecha Fin:</label>
            <input asp-for="Actual.FechaFin" type="date" />
        </div>
        <div>
            <label>Categoría ID:</label>
            <input asp-for="Actual.CategoriasID" />
        </div>
        <div>
            <label>Producto ID:</label>
            <input asp-for="Actual.ProductosID" />
        </div>
        <div>
            <label>Vendedor ID:</label>
            <input asp-for="Actual.VendedoresID" />
        </div>
        <div>
            <label>Estado ID:</label>
            <input asp-for="Actual.EstadosID" />
        </div>
        <button asp-page-handler="BtGuardar" type="submit">Guardar</button>
        <button asp-page-handler="BtCancelar" type="submit">Cancelar</button>
    }
    else if (Model.Accion == Enumerables.Ventanas.Borrar)
    {
        <div>
            <p>¿Está seguro que desea borrar la subasta con ID: @Model.Actual?.ID ?</p>
            <button asp-page-handler="BtBorrar" type="submit">Sí, borrar</button>
            <button asp-page-handler="BtCancelar" type="submit">Cancelar</button>
        </div>
    }
</form>
